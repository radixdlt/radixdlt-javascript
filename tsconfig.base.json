{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": ["typings/*", "includes/*"]
    },
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es5",
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ]
  }
}
